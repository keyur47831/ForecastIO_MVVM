<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="hourlyViewModel"
            type="code4share.forecastweatherapp.viewmodel.HourlyListData"/>
    </data>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp">
<RelativeLayout
              android:orientation="vertical"
              android:padding="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="100dp"
        android:id="@+id/ic_weather"
        app:imageUrl="@{hourlyViewModel.icon}"
        android:layout_height="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/ic_weather"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:text="@{hourlyViewModel.time}"
        android:id="@+id/txtTime"
        android:gravity="center_vertical"
        tools:text="Time"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/txtTime"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:id="@+id/txtTemperature"
        android:text="@{hourlyViewModel.temperature}"
        android:layout_toEndOf="@+id/ic_weather"
        tools:text="Temperature"
        android:layout_height="wrap_content"/>

</RelativeLayout>
    </android.support.v7.widget.CardView>
    </layout>